<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.inghackathon.dailyapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light.DarkActionBar" >
        <activity
            android:name="com.inghackathon.dailyapp.HomeActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.inghackathon.dailyapp.ui.CartActivity"
            android:label="@string/title_activity_cart" >
        </activity>
        <activity
            android:name="com.inghackathon.dailyapp.ui.ProductActivity"
            android:label="@string/title_activity_product" >
        </activity>
        <activity
            android:name="com.inghackathon.dailyapp.ui.SelectProductActivity"
            android:label="@string/title_activity_select_product" >
        </activity>
        <activity
            android:name="com.inghackathon.dailyapp.ui.PreferenceActivity"
            android:label="@string/title_activity_preference"
            android:parentActivityName="com.inghackathon.dailyapp.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.inghackathon.dailyapp.HomeActivity" />
        </activity>
        <activity
            android:name="com.inghackathon.dailyapp.ui.CartTabActivity"
            android:label="@string/title_activity_cart_tab"
            android:parentActivityName="com.inghackathon.dailyapp.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.inghackathon.dailyapp.HomeActivity" />
        </activity>
        <activity
            android:name="com.inghackathon.dailyapp.ui.HistoryTabActivity"
            android:label="@string/title_activity_history_tab"
            android:parentActivityName="com.inghackathon.dailyapp.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.inghackathon.dailyapp.HomeActivity" />
        </activity>
    </application>

</manifest>
